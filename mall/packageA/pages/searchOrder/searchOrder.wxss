/* packageA/pages/searchOrder/searchOrder.wxss */

page {
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  background: #f4f4f4;
}

/*搜索框*/

.wrapper {
  position: fixed;
  top: 0;
  font-size: 28rpx;
  width: 750rpx;
  z-index: 99;
  background: #fff;
  /* height: 180rpx; */
}

.section-wrapper {
  font-size: 28rpx;
  border-top: 2rpx solid #f4f4f4;
  width: 750rpx;
  height: 88rpx;
  display: flex;
  background: #fff;
}

.section {
  line-height: 60rpx;
  width: 600rpx;
  height: 60rpx;
  margin-left: 30rpx;
  margin-top: 14rpx;
  display: flex;
  background: rgba(244, 244, 244, 1);
  font-weight: 400;
  border-radius: 30rpx;
  position: relative;
}

.section-img {
  width: 26rpx;
  height: 26rpx;
  margin: 17rpx 22rpx;
}

input {
  width: 450rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.search {
  font-size: 32rpx;
  background: #fff;
  border: none;
  color: rgba(51, 51, 51, 1);
  height: 88rpx;
  line-height: 88rpx;
  margin-left: 30rpx;
}

.cancel {
  position: absolute;
  right: 136rpx;
  top: 24rpx;
  width: 44rpx;
  height: 44rpx;
}

.cancel image {
  width: 44rpx;
  height: 44rpx;
}

.content_top {
  display: flex;
  width: 100%;
  background: #fff;
  height: 80rpx;
  line-height: 80rpx;
}

.nav {
  box-sizing: border-box;
  font-size: 30rpx;
  height: 80rpx;
  white-space: nowrap;
}

.nav-box {
  width: 375rpx;
}

.nav-item {
  text-align: center;
  color: #555;
}

.nav-item.active {
  color: #ff2644;
}

.nav-item.active1 {
  width: 40rpx;
  height: 6rpx;
  background: #ff2644;
  margin-left: 160rpx;
  margin-top: -5rpx;
}

/*商品*/

.searchList1-wrap {
  margin-top: 190rpx;
}

.goods {
  border-bottom: 2rpx solid #f4f4f4;
  background: rgba(255, 255, 255, 1);
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.goods-title {
  margin-left: 31rpx;
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
}

.goods-text {
  margin-right: 31rpx;
  font-size: 24rpx;
  color: rgba(102, 102, 102, 1);
}

/*商品列表*/

.goods-list-wrap {
  margin-bottom: 20rpx;
  background: rgba(255, 255, 255, 1);
}

.goods-list {
  margin-left: 30rpx;
  width: 720rpx;
  border-bottom: 2rpx solid #f4f4f4;
  display: flex;
  justify-content: space-between;
}

.goods-list-img {
  background-image: url('https://xuncaoji.net/_download/img/icon/zhanw_tb_n.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  width: 240rpx;
  height: 240rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 8rpx;
}

.goods-list-img image {
  width: 240rpx;
  height: 240rpx;
}

.goods-list-item {
  margin-top: 30rpx;
  width: 428rpx;
  margin-right: 30rpx;
}

.goods-list-text {
  height: 120rpx;
  width: 428rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 28rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  color: rgba(51, 51, 51, 1);
}

.goods-list-text text {
  padding: 2rpx 12rpx;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 1);
  background: #ff6417;
  border-radius: 14rpx;
}

.goods-list-price {
  display: flex;
  margin-bottom: 30rpx;
}

.newprice-wrap {
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: #ff6417;
  display: flex;
  margin-right: 16rpx;
}

.pricesign1 {
  font-size: 24rpx;
}

.newprice {
  font-size: 36rpx;
}

.oldprice-wrap {
  display: flex;
  font-size: 24rpx;
  margin-top: 10rpx;
  text-decoration: line-through;
  color: rgba(153, 153, 153, 1);
}

.return-wrap {
  display: flex;
  height: 40rpx;
  margin-right: 16rpx;
  line-height: 40rpx;
  background: rgba(252, 243, 237, 1);
  border-radius: 8rpx;
  margin-left: 16rpx;
  font-size: 22rpx;
  color: #ff2644;
  font-family: PingFang-SC-Bold;
  font-weight: Bold;
}

.return-wrap .return-money text:nth-child(1) {
  color: #ff6417;
  padding: 0 8rpx;
}

.return-wrap .pay-money text:nth-child(1) {
  color: #ff6417;
  padding: 0 8rpx;
}

/* 空订单的时候 */

.empty-wrap {
  text-align: center;
}

.empty-img {
  width: 200rpx;
  height: 200rpx;
  margin-top: 250rpx;
}

.empty-content {
  font-size: 28rpx;
  color: rgba(102, 102, 102, 1);
}

.shops-bottom {
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}
