/* pages/evaluate/evaluate.wxss */

page {
  background: #f4f4f4;
}

/*用户评价*/

.evaluate {
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.evaluate-left {
  margin-left: 30rpx;
  display: flex;
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
}

.evaluate-left-start {
  margin-left: 20rpx;
  margin-top: 28rpx;
  display: flex;
  justify-content: space-between;
}

.evaluate-left-start image {
  width: 30rpx;
  height: 30rpx;
}

.evaluate-right {
  margin-right: 20rpx;
  display: flex;
}

.evaluate-right-text {
  font-size: 28rpx;
  color: rgba(102, 102, 102, 1);
}

.percent {
  color: #ff2644;
}

.evaluate-content-top {
  display: flex;
  position: relative;
  margin-bottom: 30rpx;
}

.evaluate-right-img {
  margin-top: 15rpx;
  width: 56rpx;
  height: 56rpx;
}

.evaluate-right-img image {
  width: 56rpx;
  height: 56rpx;
}

.evaluate-content {
  overflow: hidden;
  padding-bottom: 30rpx;
  border-bottom: 2rpx solid #f4f4f4;
  background: rgba(255, 255, 255, 1);
}

.evaluate-content-img {
  width: 100rpx;
  height: 100rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
}

.evaluate-content-img image {
  border-radius: 100%;
  width: 100rpx;
  height: 100rpx;
}

.evaluate-content-right-top {
  margin-left: 30rpx;
  margin-top: 46rpx;
  display: flex;
}

.evaluate-content-title {
  font-size: 28rpx;
  color: #333;
  margin-right: 47rpx;
}

.evaluate-content-start image {
  width: 25rpx;
  height: 25rpx;
  margin-right: 5rpx;
}

.evaluate-content-right-bottom {
  display: flex;
  font-size: 24rpx;
  margin-left: 30rpx;
  margin-top: 15rpx;
  color: rgba(153, 153, 153, 1);
}

.date-wrap {
  position: absolute;
  top:75rpx;
  right: 30rpx;
}

.evaluate-content-bottom {
  font-size: 28rpx;
  margin-left: 31rpx;
  word-break: break-all;
  color: rgba(51, 51, 51, 1);
  line-height: 36rpx;
}

.evaluate-list-scroll {
  display: flex;
  width: 100%;
  margin-left: 30rpx;
}

.evaluate-list-img {
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
  border: 1rpx solid #fff;
  margin-right: 20rpx;
}

.evaluate-list-img image {
  width: 150rpx;
  height: 150rpx;
}

/* 商家回复 */

.merchantreply {
  width: 690rpx;
  background: rgba(244, 244, 244, 1);
  border-radius: 8rpx;
  margin-left: 30rpx;
  margin-top: 30rpx;
  font-size: 28rpx;
  padding: 20rpx 0 20rpx 0;
  color: rgba(51, 51, 51, 1);
}

.merchantreply-text {
  margin-left: 20rpx;
}

.merchantreply-bottom {
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
