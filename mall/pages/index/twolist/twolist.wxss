/* pages/index/twolist/twolist.wxss */
@import "/template/goodsList/goodsList";

.comprehensive-not {
  color: #333;
  font-size: 28rpx;
  text-align: center;
  margin: 0 auto;
}

.comprehensive-not image {
  width: 380rpx;
  height: 380rpx;
}

page {
  background: #f4f4f4;
}

/*综合、价格、上新*/

.title {
  width: 650rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  font-size: 26rpx;
  padding: 0 50rpx;
}

.price {
  display: flex;
  align-items: center;
  color: #333;
}

.price-img {
  display: flex;
  align-items: center;
  flex-direction: column;
  margin-top: 15rpx;
  margin-left: 8rpx;
}

.price-img image {
  margin-bottom: 8rpx;
  width: 10rpx;
  height: 8rpx;
}

/*列表*/

.comprehensive-list-wrapper {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  margin-left: 30rpx;
}

.comprehensive-list {
  width: 348rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  margin-left: 18rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 1);
}

.comprehensive-list-img {
  width: 348rpx;
  height: 348rpx;
}

.comprehensive-list-img image {
  width: 348rpx;
  height: 348rpx;
  border-radius: 8rpx 8rpx 0px 0px;
}

.comprehensive-list-text {
  margin-left: 16rpx;
  margin-top: 10rpx;
  height: 77rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 28rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: rgba(51, 51, 51, 1);
}

.comprehensive-list-text .item1 {
  padding: 2rpx 12rpx;
  margin-right: 13rpx;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 1);
  background: #ff2644;
  border-radius: 14rpx;
}

.comprehensive-list-text .item2 {
  padding: 2rpx 12rpx;
  margin-right: 13rpx;
  font-size: 20rpx;
  color: rgba(255, 100, 23, 1);
  border: 1rpx solid rgba(255, 100, 23, 1);
  border-radius: 14rpx;
}

.comprehensive-list-price {
  display: flex;
  margin-left: 16rpx;
  margin-bottom: 16rpx;
}

.newprice {
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  font-size: 36rpx;
  color: #ff6417;
}

.newprice text {
  font-size: 24rpx;
}

.oldprice {
  margin-left: 16rpx;
  margin-top: 10rpx;
  font-size: 24rpx;
  text-decoration: line-through;
  color: rgba(153, 153, 153, 1);
}

/* 底部到底啦 */

.page-bottom {
  margin: 20rpx auto;
  text-align: center;
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
}
