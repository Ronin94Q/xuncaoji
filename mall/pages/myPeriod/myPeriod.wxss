/* pages/myPeriod/myPeriod.wxss */

page {
  background: #f4f4f4;
}

.wrap {
  position: relative;
  width: 710rpx;
  height: 336rpx;
  background: #fff;
  border-radius: 10rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}

.wrap_status {
  height: 105rpx;
  line-height: 105rpx;
  margin-left: 24rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #ff6417;
}

.listItem {
  display: flex;
}

.listItem .img {
  margin: 0 20rpx;
  width: 200rpx;
  height: 200rpx;
  background: #f4f4f4;
  border-radius: 10rpx;
}

.listItem .img image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}

.goodsName .name {
  height: 77rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 28rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  margin-right: 30rpx;
}

.goodsName .text {
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #999;
}

.goodsName .priceWrap {
  display: flex;
  margin-top: 75rpx;
  height: 30rpx;
  line-height: 30rpx;
  color: #999;
  font-size: 24rpx;
}

.goodsName .priceWrap .monthPrice {
  margin-right: 15rpx;
  color: #ff2644;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
}

.reWrite {
  width: 710rpx;
  height: 196rpx;
  background: rgba(0, 0, 0, 0.7);
  border-radius: 0rpx 0rpx 10rpx 10rpx;
  position: absolute;
  z-index: 97;
  top: 140rpx;
}

.reason {
  height: 62rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #fff;
  line-height: 39rpx;
  margin-top: 40rpx;
  margin-left: 20rpx;
}

.againCalculate {
  position: absolute;
  z-index: 99;
  right: 20rpx;
  bottom: 20rpx;
  text-align: center;
  line-height: 54rpx;
  width: 200rpx;
  height: 54rpx;
  background: rgba(255, 38, 68, 1);
  border-radius: 25rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.textData {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  text-align: center;
}
