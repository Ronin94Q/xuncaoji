.img {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  right: 30rpx;
  top: 28rpx;
}

.wraper .listItems1 {
  height: 200rpx;
  display: flex;
  border-bottom: 2rpx solid #f4f4f4;
  background: rgba(255, 255, 255, 1);
