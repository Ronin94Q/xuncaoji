.free-dialog__mask {
 position: fixed;
 top: 0;
 left: 0;
 right: 0;
 bottom: 0;
 z-index: 10;
 background: rgba(0, 0, 0, 0.4);
 display: none;
}
.free-dialog__container {
 position: fixed;
 left: 30rpx;
 bottom: 20rpx;
 width: 690rpx;
 height: 240rpx;
 border-radius: 20rpx;
 background: #fff;
 transform: translateY(150%);
 transition: all 0.4s ease;
 z-index: 11;
}
.free-dialog--show .free-dialog__container {
 transform: translateY(0);
}
.free-dialog--show .free-dialog__mask {
 display: block;
}
