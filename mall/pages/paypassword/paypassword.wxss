/* pages/paypassword/paypassword.wxss */

page {
  background: #f4f4f4;
}

.content {
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  background: rgb(255, 255, 255);
  line-height: 90rpx;
}

.content-text {
  margin-left: 29rpx;
  font-size: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.content-img {
  width: 40rpx;
  height: 40rpx;
  margin-top: 25rpx;
  margin-right: 29rpx;
}

/*弹窗*/

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 1);
  opacity: 0.5;
}

/* 弹窗内容 */

.modal-dialog {
  width: 540rpx;
  height: 587rpx;
  background: rgb(255, 255, 255);
  border-radius: 24rpx;
  position: fixed;
  top: 8%;
  left: 125rpx;
  z-index: 9999;
}
/* 设置密码 */
.modal-title {
  font-size: 34rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
  margin-top: 54rpx;
  margin-left: 51rpx;
  margin-bottom: 53rpx;
}

.section {
  width: 440rpx;
  border-bottom: 2rpx solid rgba(221, 221, 221, 1);
  margin: 0 auto;
  display: flex;
  margin-bottom: 60rpx;
}

.input-text {
  width: 30%;
  height: 27rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.section input {
  font-size: 28rpx;
  margin-top: -5rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(170, 170, 170, 1);
}

.section1 {
