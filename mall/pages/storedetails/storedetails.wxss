/* pages/storedetails/storedetails.wxss */

page {
  background: rgba(244, 244, 244, 1);
  font-family: PingFang-SC-Medium;
  font-weight: 500;
}

/* 店铺 */

.shops-wrap {
  display: flex;
  width: 720rpx;
  height: 176rpx;
  margin: 20rpx auto;
  background: rgba(255, 255, 255, 1);
  border-radius: 10px;
}

.shops-content-img {
  margin-top: 27rpx;
  margin-left: 30rpx;
  width: 80rpx;
  height: 80rpx;
}

.shops-content-img image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 8rpx;
}

.shops-content-middle {
  margin-left: 30rpx;
  margin-top: 35rpx;
}

.shops-content-middle-wrap {
  display: flex;
}

.shops-content-middle-wrap-title {
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  margin-right: 39rpx;
}

.shops-content-middle-wrap-text {
  padding: 3rpx 12rpx;
  line-height: 28rpx;
  text-align: center;
  background: rgba(255, 81, 122, 1);
  border-radius: 14rpx;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 1);
  margin-left: 15rpx;
  margin-top: 5rpx;
}

.shops-content-middle-bottom {
  font-size: 22rpx;
  margin-top: 10rpx;
  color: rgba(102, 102, 102, 1);
}

.shops-content-middle-bottom text {
  color: rgba(255, 141, 18, 1);
}

/* 店铺介绍 */

.shopsintroduction {
  overflow: hidden;
  width: 720rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 10rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
}

.shopsintroduction-text {
  margin: 30rpx auto;
  width: 659rpx;
  font-size: 26rpx;
  line-height: 40rpx;
  color: rgba(51, 51, 51, 1);
}

.shopsintroduction-img {
  margin: 0 auto;
  border-radius: 14rpx;
}

.shopsintroduction-img image {
  width: 630rpx;
  height: 280rpx;
}

/* 店铺商品 */


.quality {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.quality-title {
  height: 108rpx;
  background: rgba(255, 255, 255, 1);
  line-height: 108rpx;
}

.quality-img {
  width: 36rpx;
  height: 36rpx;
  margin: 0 20rpx;
}

.quality-text {
  font-size: 34rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
}

.quality-list-wrapper {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.quality-list {
  width: 348rpx;
  margin-top: 20rpx;
  margin-left: 18rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 1);
}

.quality-list-img {
  width: 348rpx;
  height: 290rpx;
}

.quality-list-img image {
  width: 348rpx;
  height: 290rpx;
  border-radius: 8rpx 8rpx 0px 0px;
}

.quality-list-text {
  margin-left: 16rpx;
  margin-top: 10rpx;
   display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 28rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: rgba(51, 51, 51, 1);
}

.quality-list-text text {
  padding: 3rpx 7rpx;
  font-size: 20rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  background: rgba(255, 81, 122, 1);
  border-radius: 14rpx;
}

.quality-list-price {
  display: flex;
  margin-left: 16rpx;
  margin-top: 30rpx;
}

.newprice {
  font-size: 36rpx;
  color: rgba(227, 58, 89, 1);
}

.newprice text {
  font-size: 24rpx;
}

.oldprice {
  margin-left: 16rpx;
  margin-top: 10rpx;
  font-size: 24rpx;
  text-decoration: line-through;
  color: rgba(153, 153, 153, 1);
}

.quality-list-share {
  display: flex;
  margin-bottom: 20rpx;
}

.quality-list-share-img {
  width: 44rpx;
  height: 44rpx;
}

.quality-list-share-img image {
  width: 44rpx;
  height: 44rpx;
  margin-top: 15rpx;
  margin-left: 80rpx;
}

.share-price {
  font-size: 24rpx;
  margin-left: 16rpx;
  margin-top: 20rpx;
  color: rgba(153, 153, 153, 1);
}

.share-price1 {
  color: #e33a59;
  margin-left: 20rpx;
}
.store-bottom {
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
/* 弹出框 */

.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 1);
  opacity: 0.4;
  overflow: hidden;
  z-index: 9999;
  color: rgba(255, 255, 255, 1);
}

/*对话框 */

.commodity_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  background: rgba(255, 255, 255, 1);
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  z-index: 9999;
}

.content-wrapper {
  overflow: hidden;
  height: auto;
  text-align: center;
  position: relative;
}

.content-wrapper .cancel {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  right: 30rpx;
  top: 14rpx;
}

.content-wrapper .shareCommission {
  margin-top: 70rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.content-wrapper .shareText {
  margin-top: 39rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
}
.content-wrapper .share-button {
  background: rgba(255, 255, 255, 1);
  width: 170rpx;
  border-radius: 0;
}
button::after{
  border: none;
}
.content-wrapper .photo {
  margin-top: 30rpx;
  width: 128rpx;
  height: 128rpx;
}

.content-wrapper .wx {
  margin-top: -35rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}