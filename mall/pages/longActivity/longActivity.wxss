.get-zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 99;
}

.get-zan-dialog__mask .zan-dialog__container {
  width: 630rpx;
  min-height: 238rpx;
  padding-bottom: 20rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 24rpx;
  overflow: hidden;
  position: fixed;
  top: 200rpx;
  left: 61rpx;
  text-align: center;
  z-index: 99;
}

.get-zan-dialog__mask .cancel-get {
  width: 44rpx;
  height: 74rpx;
  position: absolute;
  right: 79rpx;
  top: 126rpx;
}

.get-zan-dialog__mask .zan-dialog__container .role_title {
  margin: 44rpx auto;
  font-size: 34rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
}

.get-zan-dialog__mask .zan-dialog__container .height_text {
  text-align: left;
  color: #333;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  height: auto;
  max-height: 800rpx;
  overflow-y: scroll;
  overflow: -Scroll;
  overflow-x: hidden;
  margin-left: 47rpx;
  margin-right: 20rpx;
}
