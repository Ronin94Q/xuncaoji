/* pages/myForum/myForum.wxss */
@import "../forum/forum";

page {
  background: #f4f4f4;
}

.notStore {
  color: #333;
  font-size: 28rpx;
  text-align: center;
  margin: 0 auto;
  margin-top: 160rpx;
}

.notStore image {
  width: 380rpx;
  height: 380rpx;
}

/*导航栏*/

.container {
  padding-bottom: 30rpx;
}

.content_top {
  width: 100%;
  background: #fff;
  position: fixed;
  top: 0rpx;
  height: 80rpx;
  line-height: 72rpx;
  /* border-bottom: 2rpx solid #f4f4f4; */
  z-index: 999;
}

.nav {
  box-sizing: border-box;
  font-size: 30rpx;
  white-space: nowrap;
}

.nav-box {
  display: inline-block;
  width: 375rpx;
  padding: 0;
}

.nav-item {
  text-align: center;
  color: #555;
}

.nav-item.active {
  color: #ff2644;
  border-bottom: none;
}

.nav-item.active1 {
  width: 40rpx;
  height: 6rpx;
  background: #ff2644;
  margin-left: 170rpx;
}

.block {
  width: 750rpx;
  height: 20rpx;
  margin-top: 80rpx;
  background: #fff;
}

/* 新消息 */

.new_meg {
  display: flex;
  align-items: center;
  width: 750rpx;
  height: 104rpx;
  background: rgba(255, 255, 255, 1);
}

.new_btn {
  width: 260rpx;
  height: 64rpx;
  background: rgba(255, 38, 68, 1);
  border-radius: 32rpx;
  color: #fff;
  text-align: center;
  margin: 0 auto;
  line-height: 64rpx;
  font-size: 32rpx;
}

.container {
  border-bottom: 2rpx solid #f4f4f4;
  margin-top: 0;
}

.notcontainer {
  display: flex;
  justify-content: center;
  font-size: 24rpx;
  color: #666;
  margin-top: 100rpx;
}
