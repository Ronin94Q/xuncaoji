/* packageA/pages/takeoutStore/takeoutStore.wxss */

page {
  background: #f4f4f4;
}

.takeoutStore-wrap {
  overflow: hidden;
  width: 750rpx;
  height: 272rpx;
  background: #ff2644;
  position: fixed;
  top: 0;
}

.takeoutStore-top {
  margin-top: 10rpx;
  width: 750rpx;
  height: 272rpx;
  background: #fff;
  border-radius: 40rpx 40rpx 0rpx 0rpx;
}

.takeout-location {
  display: flex;
  height: 94rpx;
  align-items: center;
  margin-left: 30rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #333;
}

.takeout-img {
  width: 28rpx;
  height: 34rpx;
  margin-right: 10rpx;
}

.section-wrapper {
  font-size: 28rpx;
  width: 100%;
}

.section {
  line-height: 64rpx;
  width: 690rpx;
  height: 64rpx;
  margin-left: 30rpx;
  display: flex;
  font-weight: 400;
  border-radius: 30rpx;
  position: relative;
  background: #f0f1f2;
}

.section-text {
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #999;
}

.section-img {
  width: 33rpx;
  height: 33rpx;
  margin: 15rpx 22rpx;
}

.content_top {
  width: 100%;
  display: flex;
  height: 106rpx;
  align-items: center;
  margin-top: 12rpx;
}

.nav {
  box-sizing: border-box;
  font-size: 30rpx;
  white-space: nowrap;
}

.nav-box {
  display: inline-block;
  padding: 0 20rpx;
}

.nav-item {
  text-align: center;
  color: #333;
}

.nav-item.active1 {
  width: 40rpx;
  height: 6rpx;
  border-radius: 10rpx;
  margin: 0 auto;
  margin-top: 10rpx;
  background: #ff2644;
}

.nav-item.active2 {
  font-weight: bold;
}

.wrap {
  margin-left: 30rpx;
  width: 690rpx;
  box-sizing: border-box;
  margin-top: 292rpx;
}

.items {
  width: 100%;
  height: 200rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 24rpx;
  display: flex;
  padding-left: 30rpx;
  padding-right: 20rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
  box-sizing: border-box;
  background-color: #fff;
}

.img_wrap {
  background-image: url('https://xuncaoji.net/_download/img/icon/zhanw_tb_n.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  width: 140rpx;
  height: 140rpx;
  margin-right: 30rpx;
  margin-top: 30rpx;
  border-radius: 20rpx;
}

.img_wrap image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 20rpx;
}

.goodsDetail {
  width: 500rpx;
  height: 100%;
  padding-bottom: 30rpx;
  box-sizing: border-box;
}

.goodsName {
  text-align: left;
  height: 80rpx;
  line-height: 80rpx;
  width: 100%;
  font-size: 32rpx;
  color: #333;
  font-family: PingFang SC;
  font-weight: bold;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  line-clamp: 1;
  -webkit-box-orient: vertical;
}

.takeout-sign {
  display: inline-block;
  border: 1rpx solid #ff6417;
  border-radius: 6rpx;
  font-size: 20rpx;
  color: #ff6417;
  padding: 0 10rpx;
  margin-bottom: 25rpx;
  background-color: #FEF2EC;
}

.takeoutT {
  font-size: 24rpx;
  color: #666;
}

.empty{
  text-align: center;
  font-size: 24rpx;
  margin-top: 40rpx;
  color: #999;
}