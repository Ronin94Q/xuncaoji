/* pages/applyRule/applyRule.wxss */

page {
  background: #f4f4f4;
}

/* 对话框 */

.wrapper {
  background: #fff;
  padding-bottom: 30rpx;
  overflow: hidden;
}

.container {
  display: flex;
  justify-content: flex-start;
  margin: 40rpx 30rpx;
}

.container .img {
  width: 70rpx;
  height: 70rpx;
  margin-right: 29rpx;
}

.container .img image {
  width: 70rpx;
  height: 70rpx;
}

.container text {
  padding: 23rpx 23rpx;
  background: rgba(232, 243, 255, 1);
  border: 2rpx solid rgba(102, 102, 102, 1);
  border-radius: 16rpx;
  font-size: 24rpx;
  line-height: 36rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.container-xcj {
  display: flex;
  justify-content: flex-end;
  margin: 40rpx 30rpx;
  margin-left: 100rpx;
}

.container-xcj .img {
  width: 70rpx;
  height: 70rpx;
  margin-left: 29rpx;
}

.container-xcj .img image {
  width: 70rpx;
  height: 70rpx;
}

.container-xcj text {
  padding: 23rpx 23rpx;
  background: rgba(255, 242, 249, 1);
  border: 2rpx solid rgba(102, 102, 102, 1);
  border-radius: 16rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

