.toWait {
  width: 690rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background:linear-gradient(90deg,rgba(255,106,72,1) 0%,rgba(255,38,68,1) 100%);
  border-radius: 38rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  color: rgba(255, 255, 255, 1);
  position: absolute;
  right: 30rpx;
  top: 265rpx;
}

.time-title {
  float: left;
  width: 20%;
