/* packageA/pages/doBusiness/doBusiness.wxss */
page{
    background-color: #FFF;
    font-family:PingFang SC;
}
.content{
    height: 600rpx;
}
.day_box{
    height: 300rpx;
    margin-left: 29rpx;
    margin-right: 29rpx;
    border-bottom: #E7E7E7 solid 2rpx;
}
.maleft{
    margin-left: 27rpx;
}
.day{
    width:150rpx;
    height:60rpx;
    border:1rpx solid rgba(255,38,68,1);
    border-radius:30rpx;
    font-size:28rpx;
    color:rgba(255,38,68,1);
    display: inline-block;
    text-align: center;
    line-height: 60rpx;
    margin-top: 60rpx;
}
.col{
    background:rgba(244,244,244,1) !important;
    color:rgba(51,51,51,1) !important;
    border: rgba(244,244,244,1)solid 2rpx !important;
}
.time_box{
    height: 150rpx;
}
.time_title{
    font-size:28rpx;
    color:rgba(0,0,0,1);
    margin-left: 33rpx;
    height: 150rpx;
    line-height: 150rpx;
}
.time{
    height: 150rpx;
    position: relative;
}
.start_time{
    height: 70rpx;
    width:248rpx;
    border:1rpx solid rgba(170,170,170,1);
    border-radius:10rpx;
    display: inline-block;
    position: absolute;
    left: 30rpx;
    text-align: center;
}
.jiange{
    display: inline-block;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    position: absolute;
    left: 325rpx;
}
.end_time{
    height: 70rpx;
    width:248rpx;
    border:1rpx solid rgba(170,170,170,1);
    border-radius:10rpx;
    display: inline-block;
    position: absolute;
    right: 114rpx;
    text-align: center;
}
.save{
    width:690rpx;
    height:80rpx;
    background:linear-gradient(90deg,rgba(255,106,72,1) 0%,rgba(255,38,68,1) 100%);
    border-radius:40rpx;
    font-size:32rpx;
    color:rgba(255,255,255,1);
    text-align: center;
    line-height: 80rpx;
    margin-left: 30rpx;
}