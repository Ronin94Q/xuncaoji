/* pages/goodsEvaluate/goodsEvaluate.wxss */

.evaluate-img {
  width: 200rpx;
  height: 200rpx;
  margin: 181rpx 275rpx;
  margin-bottom: 39rpx;
}

.evaluate-text {
  width: 256rpx;
  margin: 0 auto;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.evaluate-btn {
  display: flex;
  margin: 0 115rpx;
  margin-top: 80rpx;
}

.evaluate-btn button {
  width: 280rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  border-radius: 40rpx;
}

.evaluate-btn button:nth-child(1) {
  background: rgba(255, 38, 68, 1);
  color: #fff;
}

button::after {
  border: none;
}
