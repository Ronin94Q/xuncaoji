/* pages/logistics/logistics.wxss */

.logistics {
  margin-top: 30rpx;
}

.logistics-top {
  width: 750rpx;
  height: 138rpx;
}

.logistics-item {
  margin-left: 30rpx;
  margin-top: 30rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333;
}

.logistics-item text:nth-child(1) {
  color: #666;
  margin-right: 50rpx;
}

.logistics-item1 {
  margin-left: 30rpx;
  margin-top: 30rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333;
}

.logistics-item1 text:nth-child(1) {
  color: #666;
  margin-right: 25rpx;
}

.logistics-item1 text:nth-child(3) {
  border: 2rpx solid #999;
  border-radius:16rpx;
  font-size: 22rpx;
  color:#999;
  margin-left: 20rpx;
  padding: 0 13rpx;
}

.logistics-block {
  width: 750rpx;
  height: 20rpx;
  background: #f1f1f1;
}

.logistics-list {
  display: flex;
  position: relative;
}

.logistics-list-left {
  margin-left: 30rpx;
}

.logistics-list-left .date {
  width: 85rpx;
  font-size: 22rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #999;
}

.logistics-list-left .date1 {
  width: 85rpx;
  font-size: 18rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: #999;
}

.logistics-list-right .img {
  width: 45rpx;
  height: 45rpx;
  position: absolute;
  left: 112rpx;
}

.logistics-list-right image {
  width: 45rpx;
  height: 45rpx;
}

.logistics-list-right .detail {
  padding-left: 10rpx;
  margin-left: 40rpx;
  margin-right: 30rpx;
  height: 120rpx;
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.logistics-list-right .text {
  color: #999;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 28rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}

.logistics-list-right .circle {
  width: 12rpx;
  height: 12rpx;
  background: rgba(170, 170, 170, 1);
  border-radius: 50%;
  position: absolute;
  left: 126rpx;
  top: 10rpx;
}

