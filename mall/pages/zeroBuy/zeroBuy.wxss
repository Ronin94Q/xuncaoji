/* pages/zeroBuy/zeroBuy.wxss */

page {
  background-color: #fcb4bd;
}

.img_title {
  width: 100%;
  height: 364rpx;
}

.zero-buy-text-wrap {
  width: 750rpx;
  position: absolute;
  top: 310rpx;
}

.zero-buy-text {
  margin: 0 auto;
  width: 460rpx;
  height: 59rpx;
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: rgba(255, 38, 68, 1);
}

.wrap {
  margin-top: 30rpx;
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
}

.items {
  width: 100%;
  height: 300rpx;
  display: flex;
  padding-left: 24rpx;
  padding-right: 27rpx;
  margin-bottom: 29rpx;
  box-sizing: border-box;
  background-color: #fff;
  border-radius: 8rpx;
}

.img_wrap {
  width: 240rpx;
  height: 100%;
  margin-right: 34rpx;
  display: flex;
  align-items: center;
}

.img_wrap image {
  width: 240rpx;
  height: 240rpx;
}

.goodsDetail {
  width: 366rpx;
  height: 100%;
  padding-top: 48rpx;
  padding-bottom: 30rpx;
  box-sizing: border-box;
}

.goodsName {
  width: 100%;
  font-size: 28rpx;
  color: #333;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.goodsPrice {
  width: 100%;
  font-size: 22rpx;
  color: #ff2644;
  margin-top: 28rpx;
}

.goodsPrice text {
  font-size: 24rpx;
  font-weight: bold;
}

.btn {
  width: 100%;
  height: 56rpx;
  border-radius: 28rpx;
  line-height: 56rpx;
  text-align: center;
  background: linear-gradient(#ff6417, #ff9a68);
  font-size: 26rpx;
  color: #fff;
  margin-top: 32rpx;
}

.block {
  width: 750rpx;
  height: 30rpx;
  background: #fcb4bd;
}

/* 提示关注公众号弹框 */

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  background-color: rgba(0, 0, 0, 0.6);
}

.content_wrap {
  width: 581rpx;
  height: 863rpx;
  position: absolute;
  left: 84rpx;
  top: 100rpx;
}

.content_wrap > image {
  width: 581rpx;
  height: 863rpx;
  position: absolute;
  left: 0rpx;
  top: 0rpx;
  z-index: -1;
}

.content {
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.content .title {
  width: 100%;
  color: #fff;
  margin-top: 103rpx;
  text-align: center;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
  line-height: 55rpx;
  -webkit-text-stroke: 2rpx undefined;
}

.content .step {
  width: 510rpx;
  margin: 0 auto;
  margin-top: 25rpx;
  padding: 22rpx 33rpx;
  box-sizing: border-box;
  background-color: rgba(255, 255, 255, 0.2);
  color: #fff;
  font-size: 30rpx;
  border-radius: 8rpx;
}

.content .step text {
  color: #d7495b;
  font-weight: bold;
}

.content .code_wrap {
  width: 240rpx;
  height: 240rpx;
  margin: 0 auto;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 34rpx;
  background-color: rgba(255, 255, 255, 0.2);
}

.content .code {
  width: 218rpx;
  height: 219rpx;
}

.mask .close {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 346rpx;
  top: 1000rpx;
  z-index: 1000;
}

/* 返回首页组件 */

.go_home {
  position: fixed;
  bottom: 20%;
  right: 10px;
  z-index: 9999;
}

/* 分享按钮 */

.share_img {
  position: absolute;
  right: 0;
  top: 54rpx;
  width: 125rpx;
  height: 70rpx;
}

/* 分享弹框 */

.commodity_screen1 {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 1);
  opacity: 0.4;
  overflow: hidden;
  z-index: 9999;
  color: rgba(255, 255, 255, 1);
}

.commodity_attr_box1 {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  background: rgba(255, 255, 255, 1);
  border-radius: 20rpx 20rpx 0rpx 0rpx;
  z-index: 9999;
}

.content-wrapper1 {
  overflow: hidden;
  height: auto;
  padding-bottom: 60rpx;
  text-align: center;
  position: relative;
}

.content-wrapper1 .cancel {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  right: 30rpx;
  top: 14rpx;
}

.content-wrapper1 .shareCommission {
  margin-top: 70rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.content-wrapper1 .shareText {
  margin-top: 39rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(102, 102, 102, 1);
}

.content-wrapper1 .share-wrap {
  width: 500rpx;
  margin: 0 auto;
  display: flex;
  justify-content: space-around;
}

.content-wrapper1 .share-button {
  background: rgba(255, 255, 255, 1);
  width: 198rpx;
  height: 185rpx;
  border-radius: 0;
}

button::after {
  border: none;
}

.content-wrapper1 .photo {
  margin-top: 30rpx;
  width: 84rpx;
  height: 84rpx;
}

.content-wrapper1 .wx {
  margin-top: -35rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}
