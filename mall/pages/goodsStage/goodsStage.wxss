/* pages/goodsStage/goodsStage.wxss */

.topImg {
  background: #ff2644;
  height: 300rpx;
  position: relative;
}

.img1 {
  height: 300rpx;
  width: 750rpx;
}

.img2 {
  width: 585rpx;
  height: 79rpx;
  position: absolute;
  left: 83rpx;
  top: 120rpx;
}

.listItem {
  width: 710rpx;
  height: 210rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0rpx 0rpx 16rpx 0rpx rgba(218, 218, 218, 0.75);
  border-radius: 10rpx;
  margin-top: 40rpx;
  margin-left: 20rpx;
}

.listItem-list {
  display: flex;
  align-items: center;
  height: 105rpx;
  line-height: 105rpx;
  margin: 0 40rpx;
  border-bottom: 2rpx solid #f1f1f1;
  font-size: 28rpx;
  color: #333;
}

.listBorder {
  border-bottom: none;
}

.listItem-left {
  margin-right: 30rpx;
}

.listItem-right {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 28rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  width: 450rpx;
  height: 105rpx;
  color: #333;
}

.listItem-right1 {
  height: 105rpx;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 400;
  color: #333;
}

.btn {
  margin: 0 auto;
  margin-top: 100rpx;
  width: 690rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  background: #FF2644;
  border-radius: 40rpx;
  color: #fff;
}
