/* pages/byStages/byStages.wxss */

page {
  background: #ff2644;
}

.topImg {
  width: 750rpx;
  height: 306rpx;
}

/*精选商品*/

.recommend-left {
  width: 750rpx;
  height: 90rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.recommend-left image {
  width: 311rpx;
  height: 43rpx;
}

.recommend-list-wrapper {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  padding-bottom: 20rpx;
}

.recommend-list {
  position: relative;
  width: 348rpx;
  padding-bottom: 20rpx;
  margin-top: 20rpx;
  margin-left: 18rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 1);
}

.month {
  position: absolute;
  top: 312rpx;
  left: 20rpx;
  height: 36rpx;
  line-height: 36rpx;
  padding: 0 5rpx;
  background: rgba(255, 38, 68, 1);
  font-size: 24rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #fff;
}

.recommend-list-img {
  background-image: url('https://xuncj.yzsaas.cn/_download/img/icon/zhanw_tb_n.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  width: 348rpx;
  height: 348rpx;
}

.recommend-list-img image {
  width: 348rpx;
  height: 348rpx;
  border-radius: 8rpx 8rpx 0px 0px;
}

.recommend-list-text {
  margin: 0 16rpx;
  margin-top: 10rpx;
  height: 83rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 28rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: rgba(51, 51, 51, 1);
}

.fenBuy {
  margin-right: 15rpx;
  width: 88rpx;
  height: 33rpx;
}

.recommend-list-price {
  display: flex;
  margin-left: 16rpx;
  margin-bottom: 16rpx;
}

.newprice {
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  font-size: 36rpx;
  color: #ff6417;
}

.newprice text {
  font-size: 24rpx;
}

.oldprice {
  margin-left: 16rpx;
  margin-top: 10rpx;
  font-size: 24rpx;
  text-decoration: line-through;
  color: rgba(153, 153, 153, 1);
}
