/* pages/posting/posting.wxss */

page {
  background: #f4f4f4;
}

/* 普通帖 */

.ordinary_text {
  width: 100%;
  height: 176rpx;
  background-color: #fff;
  padding: 0 32rpx;
  padding-top: 30rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  color: #aaa;
}

.img_wrap {
  width: 100%;
  background-color: #fff;
  padding: 0 45rpx;
  padding-bottom: 59rpx;
  display: flex;
  flex-wrap: wrap;
  padding-top: 40rpx;
  box-sizing: border-box;
}

.img_wrap image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin: 0 10rpx;
  margin-bottom: 18rpx;
}

.commentImg_wrap {
  position: relative;
}

.commentImg_wrap .close {
  width: 34rpx;
  height: 34rpx;
  position: absolute;
  top: -10rpx;
  right: -10rpx;
}

.ordinaryPosting {
  display: flex;
  justify-content: flex-end;
  margin-left: 610rpx;
  width: 109rpx;
  height: 42rpx;
}

/* 买帖 */

.buy {
  background: #fff;
}

.listItem {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 90rpx;
  padding: 0 30rpx;
  border-bottom: 2rpx solid #f4f4f4;
  font-size: 28rpx;
  color: #aaa;
}

.listItem .listRight {
  display: flex;
  align-items: center;
}

.listItem .listRight input {
  width: 200rpx;
}

.listItem .listRight input.input1 {
  text-align: right;
}

.listItem .listRight .reduce {
  color: #333;
  margin: 0 25rpx;
}

.listItem .listRight .price {
  color: #333;
}

.listItem .listRight1 {
  display: flex;
  align-items: center;
}

.listItem .listRight1 input {
  width: 170rpx;
}

.listItem .listRight1 input.input1 {
  text-align: right;
}

.listItem .listRight1 .reduce {
  color: #333;
  margin: 0 40rpx;
}

.listItem .listRight1 .price {
  color: #333;
}

.buy_text {
  width: 100%;
  height: 305rpx;
  line-height: 40rpx;
  background-color: #fff;
  padding: 30rpx 32rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  color: #aaa;
}

.buyPosting {
  display: flex;
  justify-content: flex-end;
  margin-left: 610rpx;
  width: 109rpx;
  height: 42rpx;
}

/* 卖帖 */

.sale {
  background: #fff;
}

.sale_listItem {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 90rpx;
  padding: 0 30rpx;
  border-bottom: 2rpx solid #f4f4f4;
  font-size: 28rpx;
  color: #aaa;
}

.sale_listItem .sale_listRight {
  width: 40rpx;
  height: 40rpx;
}

.sale_expect {
  padding-left: 30rpx;
  font-size: 28rpx;
  border-bottom: 2rpx solid #f4f4f4;
}

.saleListTop {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 90rpx;
  margin: 0 30rpx;
  margin-left: 0;
  border-bottom: 4rpx solid #f4f4f4;
}

.saleLeft {
  display: flex;
  align-items: center;
}

.saleLeft .textPrice {
  height: 90rpx;
  line-height: 90rpx;
  width: 400rpx;
  color: #aaa;
}

.saleRight {
  color: #ff6417;
}

.saleLeave {
  font-size: 26rpx;
  margin: 30rpx 0;
  color: #999;
  width: 620rpx;
}

.saleYear {
  font-size: 26rpx;
  margin: 30rpx 0;
  margin-top: 0;
  color: #999;
}

.saleYear text {
  color: #ff2644;
}

.saleText {
  font-size: 26rpx;
  line-height: 40rpx;
  margin: 30rpx 0;
  margin-top: 0;
  color: #ff2644;
  width: 620rpx;
}

.replyChoose {
  font-size: 26rpx;
  margin: 30rpx 0;
  margin-top: 0;
  width: 163rpx;
  height: 54rpx;
  text-align: center;
  line-height: 54rpx;
  color: #fff;
  background: #ff6417;
  border-radius: 27rpx;
}

.sale_text {
  width: 100%;
  height: 305rpx;
  line-height: 40rpx;
  background-color: #fff;
  padding: 30rpx 32rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  color: #aaa;
}

.salePosting {
  display: flex;
  justify-content: flex-end;
  margin-left: 610rpx;
  width: 109rpx;
  height: 42rpx;
}
.msgText{
  height: 50rpx;
  line-height: 50rpx;
  background: #fff;
  text-align: right;
  font-size: 26rpx;
  color: #ff2644;
  padding-right: 30rpx;
  margin-bottom: 20rpx;
}
.btn {
  display: flex;
  justify-content: space-between;
  margin: 0 20rpx;
}

button::after {
  border: none;
}

.btn2 {
  width: 690px;
  height: 80rpx;
  background-color: #ff2644;
  margin: 40rpx auto;
  border-radius: 40rpx;
  font-size: 32rpx;
  color: #fff;
  line-height: 80rpx;
  text-align: center;
}

/* 期望价格弹窗 */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 1);
  opacity: 0.5;
}

.modal-dialog {
  width: 600rpx;
  height: 454rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 24rpx;
  overflow: hidden;
  position: fixed;
  top: 15%;
  left: 75rpx;
  z-index: 99;
}

.modal-title {
  margin-left: 51rpx;
  margin-top: 54rpx;
  font-size: 34rpx;
  color: rgba(51, 51, 51, 1);
}

.section {
  display: flex;
  align-items: center;
  margin-top: 30rpx;
  margin-left: 50rpx;
  width: 440rpx;
  height: 80rpx;
  border-bottom: 4rpx solid #ddd;
}

.input-price {
  font-size: 32rpx;
  color: rgba(51, 51, 51, 1);
}

.input-text {
  margin-left: 10rpx;
  text-align: left;
  height: 60rpx;
  line-height: 60rpx;
}

.prompt {
  text-align: left;
  margin-left: 50rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 24rpx;
  color: #ff2644;
}

.modal-imgs {
  position: absolute;
  right: 50rpx;
  top: 56rpx;
  width: 30rpx;
  height: 30rpx;
}

.modal-footer {
  display: flex;
  justify-content: space-between;
  margin: 0 30rpx;
}

.btn-cancel {
  width: 240rpx;
  height: 76rpx;
  color: #ff6417;
  line-height: 76rpx;
  font-size: 32rpx;
  border: 2rpx solid #ff6417;
  border-radius: 38rpx;
  text-align: center;
}

.btn-confirm {
  width: 240rpx;
  height: 76rpx;
  background: #ff6417;
  border-radius: 38rpx;
  line-height: 76rpx;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 1);
  text-align: center;
}
