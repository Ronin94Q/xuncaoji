  line-height: 1;
}

.listItems-item {
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  margin-top: 20rpx;
  margin-bottom: 70rpx;
  border-bottom: 2rpx solid #f4f4f4;
  background: rgba(255, 255, 255, 1);
}

.listItems-item .listLeft {
  margin-right: 420rpx;
  margin-left: 30rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

/*swtich整体大小*/

.wx-switch-input {
  width: 100rpx !important;
  height: 56rpx !important;
  margin: 0 !important;
  padding: 0 !important;
}

/*白色样式（false的样式）*/

.wx-switch-input::before {
  width: 97rpx !important;
  height: 52rpx !important;
}

/*绿色样式（true的样式）*/

.wx-switch-input::after {
  width: 54rpx !important;
  height: 50rpx !important;
}

/* 保存 */

.btn {
  width: 690rpx;
  height: 80rpx;
  background: #ff6417;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  margin: 0 auto;
  color: rgba(255, 255, 255, 1);
}

.btn::after {
  border: none;
}

/* 保存弹框 */

.zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 9999;
}

.zan-dialog__container {
  width: 540rpx;
  height: 282rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 24rpx;
  overflow: hidden;
  position: fixed;
  top: 300rpx;
  left: 110rpx;
  z-index: 9999;
}

/* 弹框内容 */

.content {
  text-align: center;
  overflow: hidden;
}

.content-title {
  margin-top: 44rpx;
  margin-bottom: 10rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
}

.content-container {
  width: 372rpx;
  height: 66rpx;
  margin-left: 100rpx;
  margin-bottom: 35rpx;
  font-size: 30rpx;
  text-align: center;
  color: rgba(51, 51, 51, 1);
}

.content-button {
  display: flex;
  height: 66rpx;
  border-top: 2rpx solid #eaeaea;
}

.reject {
  border-right: 2rpx solid #eaeaea;
  width: 270rpx;
  height: 75rpx;
  line-height: 75rpx;
  font-size: 34rpx;
  color: rgba(51, 51, 51, 1);
}

.comfirm {
  height: 66rpx;
  line-height: 66rpx;
  font-size: 34rpx;
  text-align: center;
  width: 270rpx;
  background: rgba(255, 255, 255, 1);
  color: #ff2644;
}

.comfirm::after {
  border: none;
}

.addaddress {
  width: 690rpx;
  height: 76rpx;
  background: #ff6417;
  border-radius: 38px;
  margin-top: 60rpx;
  margin-left: 30rpx;
  margin-bottom: 60rpx;
  text-align: center;
  line-height: 76rpx;
  font-size: 32rpx;
  color: rgba(255, 255, 255, 1);
}
