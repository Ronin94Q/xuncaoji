/* pages/storeDetail/storeDetail.wxss */

page {
  background: #f4f4f4;
}

/*店铺详情*/

.shops-wrap {
  margin: 20rpx auto;
  width: 720rpx;
  height: 140rpx;
  display: flex;
  overflow: hidden;
  background: rgba(255, 255, 255, 1);
}

.shops-content-img {
  margin-top: 20rpx;
  margin-left: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
}

.shops-content-img image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
}

.shops-content-middle {
  margin-left: 30rpx;
  margin-top: 35rpx;
}

.shops-content-middle-wrap {
  display: flex;
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
}

.shops-content-middle-wrap-text {
  padding: 3rpx 12rpx;
  line-height: 28rpx;
  text-align: center;
  background: #ff2644;
  border-radius: 14rpx;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 1);
  margin-left: 15rpx;
  margin-top: 5rpx;
}

.shops-content-middle-bottom {
  font-size: 22rpx;
  margin-top: 10rpx;
  color: rgba(102, 102, 102, 1);
}

.shops-intro {
  overflow: hidden;
  width: 720rpx;
  margin: 0 auto;
  background: #fff;
  border-radius: 10rpx;
  padding-bottom: 30rpx;
}

.shops-intro-text {
  margin: 30rpx;
  width: 659rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.shops-intro-img {
  text-align: center;
  width: 630rpx;
  height: 280rpx;
  margin: 0 48rpx;  
}
.shops-intro-img image{
  width: 280rpx;
  height:280rpx;
}

/*店铺商品*/

.quality {
  margin-top: 20rpx;
  overflow: hidden;
}

.quality-title {
  height: 108rpx;
  background: rgba(255, 255, 255, 1);
  line-height: 108rpx;
  display: flex;
  align-items: center;
}

.quality-img {
  width: 36rpx;
  height: 36rpx;
  margin: 0 20rpx;
  margin-top: 2rpx;
}

.quality-text {
  font-size: 34rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(34, 34, 34, 1);
}

.quality-list-wrapper {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.quality-list {
  width: 348rpx;
  padding-bottom: 20rpx;
  margin-top: 20rpx;
  margin-left: 18rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 1);
}

.quality-list-img {
  background-image: url('https://xuncj.yzsaas.cn/_download/img/icon/zhanw_tb_n.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  width: 348rpx;
  height: 348rpx;
}

.quality-list-img image {
  width: 348rpx;
  height: 348rpx;
  border-radius: 8rpx 8rpx 0px 0px;
}

.quality-list-text {
  margin-left: 16rpx;
  margin-right: 16rpx;
  margin-top: 10rpx;
  height: 85rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 28rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: rgba(51, 51, 51, 1);
}

.quality-list-text .item1 {
  padding: 2rpx 12rpx;
  margin-right: 13rpx;
  font-size: 20rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  background: #ff2644;
  border-radius: 14rpx;
}

.quality-list-text .item2 {
  padding: 2rpx 12rpx;
  margin-right: 13rpx;
  font-size: 20rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: rgba(255, 100, 23, 1);
  border: 2rpx solid rgba(255, 100, 23, 1);
  border-radius: 14rpx;
}

.quality-list-price {
  display: flex;
  margin-left: 16rpx;
  margin-bottom: 16rpx;
}

.newprice {
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  font-size: 36rpx;
  color: #ff6417;
}

.newprice text {
  font-size: 24rpx;
}

.oldprice {
  margin-left: 16rpx;
  margin-top: 10rpx;
  font-size: 24rpx;
  text-decoration: line-through;
  color: rgba(153, 153, 153, 1);
}

.return-wrap {
  display: flex;
  height: 40rpx;
  margin-right: 16rpx;
  line-height: 40rpx;
  background: rgba(252, 243, 237, 1);
  border-radius: 8rpx;
  margin-left: 16rpx;
  font-size: 22rpx;
  color: #ff2644;
  font-family: PingFang-SC-Bold;
  font-weight: Bold;
}

.return-wrap .return-money text:nth-child(1) {
  color: #ff6417;
  padding: 0 8rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
}

.return-wrap .pay-money text:nth-child(1) {
  color: #ff6417;
  padding: 0 8rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
}
