  color: #45bce8;
}

.picker-text {
  text-align: center;
}

/* 有效期限弹窗 */

.commodity_screen1 {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 1);
  opacity: 0.6;
  overflow: hidden;
  z-index: 99;
  color: rgba(255, 255, 255, 1);
}

.commodity_attr_box1 {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  background: #fff;
  z-index: 99;
}

.content-wrapper1 .cancel {
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  right: 20rpx;
  top: 45rpx;
  z-index: 99;
}

.content-wrapper1 .title {
  margin-top: 39rpx;
  margin-bottom: 30rpx;
  text-align: center;
  font-size: 36rpx;
  font-family: PingFang SC;
  font-weight: bold;
}

.showBtn {
  margin: 30rpx auto;
  margin-top: 80rpx;
  line-height: 80rpx;
  text-align: center;
  width: 690rpx;
  height: 80rpx;
 background:linear-gradient(90deg,rgba(255,106,72,1) 0%,rgba(255,38,68,1) 100%);
  border-radius: 40rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  color: rgba(255, 255, 255, 1);
}
