/* packageA/pages/getMoneyMessage/getMoneyMessage.wxss */

.fill {
  font-size: 28rpx;
  color: #333;
  margin-left: 30rpx;
  height: 106rpx;
  line-height: 106rpx;
}

.goods {
  width: 691rpx;
  height: 200rpx;
  background: #fff;
  box-shadow: 0rpx 1rpx 20rpx 0rpx rgba(4, 0, 0, 0.08);
  border-radius: 10rpx;
  margin: 0 auto;
  display: flex;
  font-size: 24rpx;
  color: #999;
}

.goodsImg {
  width: 140rpx;
  height: 140rpx;
  border-radius: 4rpx;
  margin: 30rpx;
}

.goods_middle {
  width: 460rpx;
  margin: 30rpx;
  margin-top: 25rpx;
  margin-left: 0;
}

.goodsName {
  font-size: 26rpx;
  margin-bottom: 20rpx;
  color: #333;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

.goodsPrice {
  margin-top: 20rpx;
}

.goodsPrice text:nth-child(2) {
  color: #ff2644;
}

.listItem {
  width: 690rpx;
  height: 218rpx;
  box-shadow: 0rpx 0rpx 16rpx 0rpx #dadada;
  border-radius: 10rpx;
  margin-left: 30rpx;
  font-size: 26rpx;
  font-family: PingFang SC;
  font-weight: 400;
}

.listItem-list {
  height: 109rpx;
  display: flex;
  align-items: center;
}

.listItem-right {
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  width: 630rpx;
  margin: 0 auto;
  height: 109rpx;
  border-bottom: 2rpx solid #f1f1f1;
}

.listItem-right1 {
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  line-height: 109rpx;
  margin-left: 30rpx;
}

.listBorder {
  border-bottom: none !important;
}

.goodsBtn {
  width: 690rpx;
  height: 80rpx;
  background: linear-gradient(90deg, #ff6a48 0%, #ff2644 100%);
  border-radius: 40rpx;
  color: #fff;
  line-height: 80rpx;
  text-align: center;
  margin: 0 auto;
  margin-top: 100rpx;
  margin-bottom: 59rpx;
}

.goodsMessage {
  margin: 0 auto;
  width: 688rpx;
  font-size: 24rpx;
  color: #999;
  line-height: 1.8;
}

.goodsTitle {
  margin-bottom: 30rpx;
}

/* 发布成功 */

.get-zan-dialog__mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  z-index: 99;
}

.get-zan-dialog__mask .zan-dialog__container {
  width: 600rpx;
  height: 585rpx;
  background: rgba(255, 255, 255, 1);
  border-radius: 24rpx;
  padding-bottom: 20rpx;
  overflow: hidden;
  position: fixed;
  top: 300rpx;
  left: 75rpx;
  z-index: 99;
  text-align: center;
}

.get-zan-dialog__mask .tanImg {
  display: flex;
  align-items: center;
  width: 195rpx;
  height: 186rpx;
  position: absolute;
  top: 200rpx;
  left: 278rpx;
  z-index: 999;
}

.successTitle {
  font-size: 34rpx;
  margin-top: 124rpx;
  color: #333;
}

.successText {
  text-align: left;
  margin: 0 auto;
  margin-top: 118rpx;
  width: 498rpx;
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

.successBtn {
  width: 500rpx;
  height: 76rpx;
  background: linear-gradient(90deg, #ff6a48 0%, #ff2644 100%);
  border-radius: 40rpx;
  color: #fff;
  line-height: 76rpx;
  text-align: center;
  margin: 0 auto;
  margin-top: 39rpx;
  font-size: 32rpx;
}
