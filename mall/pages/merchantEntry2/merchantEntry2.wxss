/* pages/merchantEntry2/merchantEntry2.wxss */

page {
  background: #f4f4f4;
}

.title {
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 2rpx solid #f4f4f4;
  background: rgba(255, 255, 255, 1);
}

.title text {
  margin-left: 30rpx;
  font-size: 32rpx;
}

.wraper .listItems {
  position: relative;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  border-bottom: 2rpx solid #f4f4f4;
  background: rgba(255, 255, 255, 1);
}

.wraper .listItems .listLeft {
  margin-right: 15rpx;
  margin-left: 30rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.wraper .listItems .listRight {
  font-size: 28rpx;
  margin-top: 20rpx;
  width: 300rpx;
}

.wraper .listItems image {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: 24rpx;
  right: 32rpx;
}
.code {
  margin-top: 10rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  background: rgba(255, 255, 255, 1);
}

button[disabled]{
  background: rgba(255, 255, 255, 1) !important;
  border: none !important;
  border-radius: 0 !important;
}


button::after {
  border: none;
}
/* 保存 */

.btn {
  width: 690rpx;
  height: 80rpx;
  background: rgba(255, 141, 18, 1);
  border-radius: 40rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  margin: 0 auto;
  margin-top: 70rpx;
  color: rgba(255, 255, 255, 1);
}

.btn::after {
  border: none;
}
