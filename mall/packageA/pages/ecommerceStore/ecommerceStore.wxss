/* packageA/pages/ecommerceStore/ecommerceStore.wxss */

page {
  background: #f1f1f1;
}

.store {
  display: flex;
  align-items: center;
  background: #150a21;
  padding-bottom: 30rpx;
}

.storeImg {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  margin-left: 30rpx;
}

.storeMiddle {
  font-size: 32rpx;
  color: #fff;
}

.stroeName {
  width: 360rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

.storeRight {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 148rpx;
  height: 50rpx;
  background: #ff2644;
  border-radius: 25rpx;
  font-size: 26rpx;
  color: #fff;
  margin-left: 62rpx;
}

.storeRight1 {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 148rpx;
  height: 50rpx;
  border: 2rpx solid #fff;
  border-radius: 25rpx;
  font-size: 26rpx;
  color: #fff;
  margin-left: 62rpx;
}

.storeXing {
  width: 28rpx;
  height: 26rpx;
  margin-right: 5rpx;
}

.grade {
  display: flex;
  font-size: 22rpx;
  margin-top: 15rpx;
}

.storeText {
  width: 98rpx;
  height: 32rpx;
  background: linear-gradient(-90deg, #fa8f54 0%, #ff2644 100%);
  border-radius: 4rpx 0rpx 0rpx 4rpx;
  color: #fff;
  text-align: center;
}

.storeGrade {
  width: 50rpx;
  height: 32rpx;
  background: #fff;
  border-radius: 0rpx 4rpx 4rpx 0rpx;
  color: #ff2644;
  text-align: center;
}

.section-wrapper {
  background: #150a21;
  font-size: 28rpx;
  width: 100%;
}

.section {
  line-height: 64rpx;
  width: 690rpx;
  height: 64rpx;
  margin-left: 30rpx;
  display: flex;
  font-weight: 400;
  border-radius: 30rpx;
  position: relative;
  background: rgba(255, 255, 255, 0.4);
}

.wrapText {
  display: flex;
  justify-content: space-between;
  margin: 0 30rpx;
}

.section1 {
  display: flex;
  line-height: 64rpx;
  width: 600rpx;
  height: 64rpx;
  font-weight: 400;
  border-radius: 30rpx;
  position: relative;
  background: rgba(255, 255, 255, 0.4);
}

.textHtx {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.text {
  margin-top: 10rpx;
  color: #fff;
}

.section-img {
  width: 33rpx;
  height: 33rpx;
  margin: 15rpx 22rpx;
}

.content_top {
  width: 100%;
  display: flex;
  height: 106rpx;
  align-items: center;
  margin-top: 12rpx;
}

.nav {
  box-sizing: border-box;
  font-size: 30rpx;
  white-space: nowrap;
}

.nav-box {
  display: inline-block;
  width: 130rpx;
  padding: 0 10rpx;
}

.nav-item {
  text-align: center;
  color: #fff;
}

.nav-item.active1 {
  width: 30rpx;
  height: 6rpx;
  background: #fff;
  margin-left: 50rpx;
  border-radius: 3rpx;
  margin-top: 10rpx;
}

.content_all {
  width: 162rpx;
  display: flex;
  align-items: center;
  margin-top: -3rpx;
  margin-left: 28rpx;
  font-size: 30rpx;
  color: #333;
}

.content_all image {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.quality-list-wrapper {
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.quality-list {
  width: 348rpx;
  padding-bottom: 20rpx;
  margin-top: 20rpx;
  margin-left: 18rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 1);
}

.quality-list-img {
  background-image: url('https://xuncaoji.net/_download/img/icon/zhanw_tb_n.png');
  background-size: 100% 100%;
  background-repeat: no-repeat;
  width: 348rpx;
  height: 348rpx;
}

.quality-list-img image {
  width: 348rpx;
  height: 348rpx;
  border-radius: 8rpx 8rpx 0px 0px;
}

.quality-list-text {
  margin-left: 16rpx;
  margin-right: 16rpx;
  margin-top: 10rpx;
  height: 85rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 28rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: rgba(51, 51, 51, 1);
}

.quality-list-text .item1 {
  padding: 2rpx 12rpx;
  margin-right: 13rpx;
  font-size: 20rpx;
  color: rgba(255, 255, 255, 1);
  background: #ff2644;
  border-radius: 14rpx;
}

.quality-list-text .item2 {
  padding: 2rpx 12rpx;
  margin-right: 13rpx;
  font-size: 20rpx;
  color: rgba(255, 100, 23, 1);
  border: 2rpx solid rgba(255, 100, 23, 1);
  border-radius: 14rpx;
}

.quality-list-price {
  display: flex;
  margin-left: 16rpx;
  margin-bottom: 16rpx;
}

.newprice {
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  font-size: 36rpx;
  color: #ff6417;
}

.newprice text {
  font-size: 24rpx;
}

.oldprice {
  margin-left: 16rpx;
  margin-top: 10rpx;
  font-size: 24rpx;
  text-decoration: line-through;
  color: rgba(153, 153, 153, 1);
}

.return-wrap {
  display: flex;
  height: 40rpx;
  margin-right: 16rpx;
  line-height: 40rpx;
  background: rgba(252, 243, 237, 1);
  border-radius: 8rpx;
  margin-left: 16rpx;
  font-size: 22rpx;
  color: #ff2644;
  font-family: PingFang-SC-Bold;
  font-weight: Bold;
}

.return-wrap .return-money text:nth-child(1) {
  color: #ff6417;
  padding: 0 8rpx;
}

.return-wrap .pay-money text:nth-child(1) {
  color: #ff6417;
  padding: 0 8rpx;
}
