  font-size: 30rpx;
  margin-right: 24rpx;
}

.block {
  height: 40rpx;
  width: 750rpx;
  background: #fcb3bc;
}

/* 左右滑模板 */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 1);
  opacity: 0.7;
}

.modal-dialog {
  display: flex;
  justify-content: space-between;
  font-size: 36rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
}

.modal-dialog image {
  width: 186rpx;
  height: 250rpx;
}

.modal-dialog .img1 {
  position: absolute;
  left: 68rpx;
  bottom: 17%;
}

.modal-dialog .img2 {
  position: absolute;
  right: 68rpx;
  bottom: 30%;
}

.modal-dialog .text {
  position: absolute;
  left: 225rpx;
  bottom: 25%;
}

