  height: 44rpx;
  left: 71rpx;
  top: 95rpx;
}

.font_one {
  font-size: 28rpx;
  font-family: PingFang SC;
  color: rgba(153, 153, 153, 1);
  display: inline-block;
  position: absolute;
  left: 333rpx;
  top: 104rpx;
}

.end_time {
  font-size: 32rpx;
  font-family: PingFang SC;
  height: 44rpx;
  color: rgba(51, 51, 51, 1);
  text-align: center;
  display: inline-block;
