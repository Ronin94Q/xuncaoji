/* pages/cityPartner/cityPartner.wxss */

.page {
  display: block;
  min-height: 100%;
  width: 100%;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 1;
}

.wraper .listItems {
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  border-bottom: 2rpx solid #f4f4f4;
  background: rgba(255, 255, 255, 1);
}

.wraper .listItems-wrap {
  margin-bottom: 20rpx;
}

.wraper .listItems .listLeft {
  width: 160rpx;
  margin-left: 30rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(51, 51, 51, 1);
}

.wraper .listItems .listRight {
  font-size: 28rpx;
  width: 320rpx;
  color: #666;
}

.wraper .listItems .listRight1 {
  font-size: 28rpx;
  width: 550rpx;
  color: #666;
}

.listCityWrap {
  height: 270rpx;
}

.wraper .listItems .listCity {
  margin-left: 190rpx;
  font-size: 28rpx;
}

.listCode {
  position: relative;
}

.code {
  position: absolute;
  right: 30rpx;
  top: 15rpx;
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  background: rgba(255, 255, 255, 1);
}

.img {
  position: absolute;
  width: 56rpx;
  height: 56rpx;
  right: 30rpx;
  top: 108rpx;
}

.listImg {
  position: relative;
}

.listCityImg {
  position: absolute;
  width: 56rpx;
  height: 56rpx;
  right: 30rpx;
  top: 20rpx;
}

.listCityDel {
  position: absolute;
  width: 34rpx;
  height: 34rpx;
  left: 30rpx;
  top: 30rpx;
}

button[disabled] {
  background: rgba(255, 255, 255, 1) !important;
  border: none !important;
  border-radius: 0 !important;
}

button::after {
  border: none;
}

/* 保存 */

.btn {
  width: 690rpx;
  height: 80rpx;
  background: #ff2644;
  border-radius: 40rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  margin: 0 auto;
  margin-top: 70rpx;
  margin-bottom: 70rpx;
  color: rgba(255, 255, 255, 1);
}

.btn::after {
  border: none;
}

.wrap_img {
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
  margin-top: 150rpx;
}

.wrap_text {
  margin-top: 30rpx;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #333;
}

/* 未审核过 */

.wrap_reasons {
  margin-top: 66rpx;
  text-align: center;
  font-size: 28rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #aaa;
}

.wrap_reasons text:nth-child(2) {
  color: #333;
}

.wrap_btn {
  margin: 0 auto;
  margin-top: 70rpx;
  width: 690rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  background: rgba(255, 100, 23, 1);
  border-radius: 40rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color: #fff;
}

/* 审核通过 */

.wrap_care {
  margin: 0 auto;
  margin-top: 69rpx;
  width: 471rpx;
  height: 580rpx;
  background: rgba(255, 255, 255, 1);
  border: 8rpx solid #ff6417;
  border-radius: 8rpx;
  font-size: 32rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #ff6417;
  text-align: center;
}

.wrap_care_text1 {
  margin-top: 41rpx;
}

.wrap_care_img {
  width: 430rpx;
  height: 430rpx;
}
