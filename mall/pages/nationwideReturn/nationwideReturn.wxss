/* pages/nationwideReturn/nationwideReturn.wxss */

page {
  background: #f4f4f4;
}

/* 已累计返现 */

.nationwideReturn-img {
  text-align: center;
  position: relative;
  height: 259rpx;
  overflow: hidden;
  background-size: 100% 100%;
}
.nationwideReturn-img image{
  width: 100%;
  height: 100%
}
.nationwideReturn-text{
  position: absolute;
  top:60rpx;
  width: 700rpx;
}
.nationwideReturn-wrapper .nationwideReturn-text .title {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}

.nationwideReturn-wrapper .nationwideReturn-text .num {
  font-size: 54rpx;
  font-family: FZLTDHK--GBK1-0;
  font-weight: 400;
  color: rgba(255, 255, 255, 1);
}

.swiper_container {
  line-height: 112rpx;
  height: 112rpx;
  width: 710rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 6px 10px 0px rgba(0, 0, 0, 0.1);
  border-radius: 10px;
  position: absolute;
  right: 12rpx;
  top: 200rpx;
  text-align: center;
}

.swiper_item image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 21rpx;
  margin-bottom: -6rpx;
  border-radius: 50%;
}

.swiper_item {
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  letter-spacing: 2px;
}

.swiper_item text {
  color: #ff3162;
}

/*好物返现*/

.recommend-title {
  height: 80rpx;
  display: flex;
  margin-top: 100rpx;
  line-height: 80rpx;
  width: 750rpx;
  position: relative;
}

.recommend-left {
  position: absolute;
  left: 203rpx;
  width: 345rpx;
  height: 10rpx;
}

.recommend-left image {
  width: 345rpx;
  height: 10rpx;
}

.recommend-middle {
  margin-left: 309rpx;
  font-size: 34rpx;
  color: rgba(51, 51, 51, 1);
}

.recommend-list-wrapper {
  margin-bottom: 50rpx;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
}

.recommend-list {
  width: 348rpx;
  margin-top: 20rpx;
  margin-left: 18rpx;
  border-radius: 8rpx;
  background: rgba(255, 255, 255, 1);
}

.recommend-list-img {
  width: 348rpx;
  height: 348rpx;
}

.recommend-list-img image {
  width: 348rpx;
  height: 348rpx;
  border-radius: 8rpx 8rpx 0px 0px;
}

.recommend-list-text {
  margin-left: 16rpx;
  margin-top: 10rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 28rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  color: rgba(51, 51, 51, 1);
}

.recommend-list-price {
  display: flex;
  margin-left: 16rpx;
  margin-top: 30rpx;
}

.newprice {
  font-size: 36rpx;
  color: rgba(227, 58, 89, 1);
}

.newprice text {
  font-size: 24rpx;
}

.oldprice {
  margin-left: 16rpx;
  margin-top: 10rpx;
  font-size: 24rpx;
  text-decoration: line-through;
  color: rgba(153, 153, 153, 1);
}

.recommend-list-share {
  font-size: 28rpx;
  margin-left: 16rpx;
  margin-top: 16rpx;
  padding-bottom: 30rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 141, 18, 1);
}

.return-bottom {
  font-size: 24rpx;
  font-family: PingFang-SC-Regular;
  font-weight: 400;
  color: rgba(153, 153, 153, 1);
  text-align: center;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
