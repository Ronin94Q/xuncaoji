/* pages/logisticsDetail/logisticsDetail.wxss */

page {
  background: #f4f4f4;
}

.log-top {
  height: 138rpx;
  background: rgba(255, 255, 255, 1);
  display: flex;
  justify-content: flex-start;
  padding-left: 30rpx;
  align-items: center;
}

.log-top image {
  width: 40rpx;
  height: 40rpx;
}

.log-top .text {
  margin-left: 15rpx;
  width: 593rpx;
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 36rpx;
}

.log-detail {
  margin-top: 20rpx;
  background: rgba(255, 255, 255, 1);
  padding-bottom: 40rpx;
}

.log-title {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2rpx solid #e7e7e7;
  font-size: 28rpx;
  margin: 0 30rpx;
  background: rgba(255, 255, 255, 1);
}

.log-list-item {
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-size: 26rpx;
  color: rgba(153, 153, 153, 1);
  line-height: 36rpx;
  margin: 29rpx 30rpx;
}

.log-list-scroll {
  white-space: nowrap;
  display: flex;
  width: 100%;
  margin-left: 30rpx;
}

.log-list-img {
  display: inline-block;
  width: 140rpx;
  height: 140rpx;
  border: 2rpx solid #fff;
  margin-right: 15rpx;
}

.log-list-img image {
  width: 140rpx;
  height: 140rpx;
}

.log-no {
  overflow: hidden;
  margin-top: 20rpx;
  background: rgba(255, 255, 255, 1);
  padding-bottom: 40rpx;
}

.log-no-item {
  width: 674rpx;
  font-size:26rpx;
  color: rgba(51, 51, 51, 1);
  line-height: 36rpx;
  margin: 29rpx 30rpx;
}

.log-no-scroll {
  white-space: nowrap;
  display: flex;
  width: 100%;
  margin-left: 30rpx;
}

.log-no-img {
  display: inline-block;
  width: 140rpx;
  height: 140rpx;
  border: 2rpx solid #fff;
  margin-right: 15rpx;
}

.log-no-img image {
  width: 140rpx;
  height: 140rpx;
}
