.code-input {
  width: 540rpx;
  border-bottom: 2rpx solid rgba(221, 221, 221, 1);
  margin: 129rpx auto;
  margin-top: 224rpx;
}

.code-input input {
  width: 215rpx;
  height: 32rpx;
  margin-bottom: 30rpx;
  margin-left: 169rpx;
  font-size: 34rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(170, 170, 170, 1);
}

.invitation-code {
  width: 630rpx;
  height: 80rpx;
  background: #ff2644;
  border-radius: 40rpx;
  font-size: 32rpx;
  margin-bottom: 100rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
}
.application-wrap{
  display: flex;
  justify-content: space-between;
}
.application-code {
  background: #fff;
  margin-left: 20rpx;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color:#FF6417;
  border-radius: 0;
}

.writed {
  margin-right: 20rpx;
  background: #fff;
  font-size: 30rpx;
  font-family: PingFang SC;
  font-weight: 500;
  color:#3C8AFF;
  border-radius: 0;
}
button::after {
  border: none;
}
