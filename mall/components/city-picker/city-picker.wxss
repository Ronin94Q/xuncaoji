.city-picker {
  position: fixed;
  left: 0;
  margin: 0;
  padding: 0;
  width: 750rpx;
  height: 100%;
  z-index: 100;
}

.city-picker-mask {
  position: fixed;
  bottom: -48rpx;
  left: 0;
  background-color: #353535;
  opacity: 0.3;
  width: 100%;
  height: 1524rpx;
  z-index: 10;
}

.city-picker-content {
  position: fixed;
  bottom: -48rpx;
  left: 0;
  width: 100%;
  height: 474rpx;
  background-color: #fff;
  z-index: 33;
  overflow: hidden;
}

.city-picker-content-top {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 80rpx;
  justify-content: space-between;
  background: #f4f4f4;
}

.city-picker-content-line {
  background-color: #d3dce6;
  height: 1px;
  width: 100%;
}

.city-picker-content-cancel {
  line-height: 50rpx;
  height: 50rpx;
  font-size: 28rpx;
  color: #AAAAAA;
  padding: 30rpx 48rpx;
}

.city-picker-content-sure {
  line-height: 50rpx;
  height: 50rpx;
  font-size: 28rpx;
  color:#FF2644;
  padding: 30rpx 48rpx;
}

.city-picker-content-center {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 362rpx;
  overflow: hidden;
  margin-top: 6rpx;
  margin-bottom: 6rpx;
  justify-content: space-between;
}

.city-picker-content-item {
  width: 50%;
  height: 210rpx;
  font-size: 28rpx;
  text-align: center;
}
