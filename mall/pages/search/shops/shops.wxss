/* pages/search/shops/shops.wxss */

page {
  background: #f4f4f4;
}

/*电商列表*/

.shops-wrap {
  margin-top: 20rpx;
  background: rgba(255, 255, 255, 1);
}

.shops-list {
  position: relative;
  height: 140rpx;
  width: 720rpx;
  display: flex;
  margin-left: 30rpx;
  border-bottom: 2rpx solid #f4f4f4;
}

.shops-list-img {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
}

.shops-list-img image {
  width: 100rpx;
  height: 100rpx;
  margin-top: 20rpx;
  border-radius: 8rpx;
}

.shops-middle-top {
  display: flex;
  margin-top: 20rpx;
}

.shops-middle-b {
  margin-right: 10rpx;
  font-size: 28rpx;
  color: rgba(51, 51, 51, 1);
}

.shops-middle-z {
  width: 60rpx;
  height: 28rpx;
  margin-top: 8rpx;
  background: rgba(255, 81, 122, 1);
  border-radius: 14px;
  font-size: 20rpx;
  text-align: center;
  line-height: 28rpx;
  color: rgba(255, 255, 255, 1);
}

.shops-middle-bottom {
  font-size: 22rpx;
  margin-top: 24rpx;
  color: rgba(102, 102, 102, 1);
}

.shops-right-img {
  position: absolute;
  right: 0;
  top: 42rpx;
  width: 56rpx;
  height: 56rpx;
}

.shops-right-img image {
  width: 56rpx;
  height: 56rpx;
}
